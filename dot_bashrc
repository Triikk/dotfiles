#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# aliases
alias ls='ls --color=auto --all'
alias ll='ls -al'
alias grep='grep --color=auto'
alias diff='diff --color=auto'

# prompt
PS1='[\u@\h \w]\$ '

# history size
HISTSIZE=10000

# fuzzy finder
[ -f ~/.fzf.bash ] && source ~/.fzf.bash
